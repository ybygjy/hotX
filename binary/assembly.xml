<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1">
	<id>tgz</id>
	<!-- 应用名.war（压缩包解压后的目录名） -->
	<baseDirectory>.hotX</baseDirectory>
	<formats>
		<!-- 压缩包的格式,一律为tar.gz -->
		<format>tar.gz</format>
	</formats>

	<files>
		<file>
			<!-- 要压缩的目录，请按实际目录填写 -->
			<source>../agent/target/hotX-agent-jar-with-dependencies.jar</source>
			<!-- 输出的目录,此处为空即可 -->
			<destName>hotX-agent.jar</destName>
		</file>
		<file>
			<!-- 要压缩的目录，请按实际目录填写 -->
			<source>../core/target/hotX-core-jar-with-dependencies.jar</source>
			<!-- 输出的目录,此处为空即可 -->
			<destName>hotX-core.jar</destName>
		</file>
		<file>
			<!-- 要压缩的目录，请按实际目录填写 -->
			<source>../hotX.sh</source>
		</file>
	</files>
</assembly>
